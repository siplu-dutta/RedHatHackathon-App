{
    "root": true,
    "parser": "babel-eslint",
    "env": {
        "node": true
    },
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "rules": {
        "prefer-const": "warn",
        "no-shadow": [
            "warn",
            {
                "builtinGlobals": true,
                "hoist": "all"
            }
        ]
    }
}
