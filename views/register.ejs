<%- include _header %>
    <h3 class="title has-text-grey">Issue Entry</h3>
    <p class="subtitle has-text-grey">Please provide details of issue.</p>
    <div class="box">
        <figure class="avatar">
            <img src="/index.jpg">
        </figure>
        <form method="post">
            <% if (typeof error!='undefined') { %>
                <article class="message is-danger is-small">
                    <div class="message-body"><%=error%></div>
                </article>
            <% } %>
            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="email" placeholder="Application" autofocus="">
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="password" placeholder="Issue Title">
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="password2" placeholder="Issue Details">
                </div>
            </div>
            <button class="button is-block is-info is-large is-fullwidth">Submit</button>
        </form>
    </div>
<%- include _footer %>
